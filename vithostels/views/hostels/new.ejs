<% include ../partials/header %>

  <div class="container mt-4">    
    <div class="row">
      <div class="col">
      </div>
      <div class="col-12 col-sm-12 col-lg-9">
        <div class="card shadow border-0">          
          <div class="card-body">
            <h1 class="text-center">Add a Hostel Block</h1>
            <p>
              <small class="text-muted">Fields marked * are required.</small>
            </p>
            <form action="/hostels" method="POST" enctype="multipart/form-data" class="needs-validation" novalidate>
              <div class="form-group">
                <label for="">Name*</label>
                <input type="text" class="form-control" name="hostel[name]" placeholder="Name" required>
                <div class="invalid-feedback">
                  Please provide a Hostel name.
                </div>
              </div>
              <div class="form-group">
                <label for="">Price/Sem*</label>
                <input type="number" class="form-control" name="hostel[price]" placeholder="Price/Semester" min="0.01" step="0.01" required>
                <div class="invalid-feedback">
                  Please provide a price.
                </div>
              </div>
              <div class="input-group mb-3">
                <div class="custom-file">
                  <input type="file" name="image" accept="image/*" class="custom-file-input" id="image" aria-describedby="inputGroupFileAddon01"
                    required>
                  <div class="invalid-feedback">
                    Please upload an image of your Hostel.
                  </div>
                  <label class="custom-file-label" for="inputGroupFile01">Image*</label>
                </div>
              </div>
              <div class="form-group">
                <label for="exampleFormControlTextarea1">Description*</label>
                <textarea class="form-control" id="exampleFormControlTextarea1" name="hostel[description]" rows="3" required></textarea>
                <div class="invalid-feedback">
                  Please provide a description of your Hostel.
                </div>
              </div>
              <div class="form-group">
                <label for="location">Location*</label>
                <input type="text" class="form-control" name="hostel[location]" placeholder="Near Subway" id="location" required>
                <div class="invalid-feedback">
                  Please provide a valid location
                </div>
              </div>
              <div class="form-group">
                <label for="">Phone Number*</label>
                <input type="text" class="form-control" name="hostel[phone]" placeholder="123-456-7891" required>
                <div class="invalid-feedback">
                  Please provide a phone number.
                </div>
              </div>
              <label for="">Booking Window*</label>
              <div class="form-row">
                <div class="form-group col-md-6">
                  <input type="text" class="form-control" name="hostel[start]" placeholder="Starting Month date" required>
                  <div class="invalid-feedback">
                    Please provide a booking window.
                  </div>
                </div>
                <div class="form-group col-md-6">
                  <input type="text" class="form-control" name="hostel[end]" placeholder="Ending Month date" required>
                </div>
              </div>
              <div class="form-group">
                <label for="">Amenities separated by commas</label>
                <input type="text" class="form-control" name="hostel[tags]" placeholder="Example: Badminton court, Garden, wifi,Canteen">
              </div>
              <button type="submit" class="btn btn-danger btn-block">Submit</button>
            </form>
            <a class="btn btn-link" href="/hostels">Go Back</a>
          </div>

        </div>

      </div>
      <div class="col">

      </div>
    </div>

  </div>

  <% include ../partials/footer %>